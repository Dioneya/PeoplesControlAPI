            "type": "string","minLength": 5, "maxLength": 32
        },
        "phone": {
            "type": "string","pattern" : "(\\d{3})\\D*\\d{3}\\D*\\d{2}\\D*\\d{2}"}
        },
        "email": {
            "type": "string","format" : "email"
        },
        "is_notification_email": {
            "type": "boolean"
        },
        "is_notification_sms": {
            "type": "boolean"
        },
        "is_anonymous_requests": {
            "type": "boolean"
        }
      },
      "required": []
}

